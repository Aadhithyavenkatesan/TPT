<body class="bg-dark">
    <div class="d-flex con justify-content-center align-items-center">
        <div class="bor">
            <form action="/list" method="post">
                <fieldset>
                    <legend  class="form-label text-bg-dark">Team Leader's Login</legend>
                    {{#if msg}}
                    <h6 class="text-danger px-0 py-0 my-0">{{msg}}</h6>
                    {{/if}}
                    <label for="username" class=" py-2 text-bg-dark" title="I have sent you that username. Go & chack it.">Enter your Username :</label><br>
                    <input type="text" name="username"id="username" placeholder=" like Aadhithya" required><br>

                    <label for="password"  class="form-label text-bg-dark py-2">Enter your Password :</label><br>
                    <input type="password" name='password' id="password" required><br>
                    <input type="submit" class="my-3 btn btn-success" value="Submit">
                </fieldset>
            </form>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
